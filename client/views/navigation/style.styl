@import '../global-style.styl'

// instant transition
.navigation-view {
    padding: 0;
    > .navigation-item {
        display: none;
    }
    > .navigation-item.current {
        display: block;
    }
    > .navigation-item.current ~ .navigation-item {
        display: none;
    }
}

// slide left and right
// pretty good for one at a time, but has artifacts when going back/forward multiple screens at a time
.left-right-navigation-view {
    margin: 0;
    padding: 0;
    
    position: relative;
    overflow-x: hidden;

    > .navigation-item {
        position: absolute;
        left: -100%;
        width: 100%;
        transition: left 250ms ease-in-out;
    }
    > .navigation-item.current {
        position: relative;
        left: 0;
        top: 0;
        overflow-x: auto;
    }
    > .navigation-item.current ~ .navigation-item {
        position: absolute;
        top: 0;
        left: 100%;
    }
    > .navigation-item:first-child:last-child {
        left: 0;
    }
}

.zooming-navigation-view {
    position: relative;

    > .navigation-item {
        position: absolute;
        opacity: 0;
        transform: scale(4, 4);
    }
    > .navigation-item.current {
        position: relative;
        opacity: 1;
        transform: initial;
    }
    > .navigation-item.current ~ .navigation-item {
        position: absolute;
        top: 0;
        opacity: 0;
        transform: scale(0.125, 0.125);
    }
}
