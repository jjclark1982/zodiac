@import 'nib'

brand-yellow = #ffd400;
brand-blue = #006688;
brand-dark-blue = #00436e;
brand-gray = #9e9e9e;
brand-black = #3a383a;
text-box-dark = #e6e6e6;
text-box-light = #f2f2f2;

.show-when-open {
    display: none;
}
.open .show-when-open {
    display: inline-block;
}
.open .hide-when-open {
    display: none;
}

body{
    font-family: "Lato";
}

.icon-spin {
  animation: spin 2s infinite linear;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(359deg);
  }
}
