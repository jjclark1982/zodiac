@import 'nib'

.table-view {
    margin: 1em auto;
    th, td {
        border: 1px solid #333;
        text-align: center;
    }
    th {
        line-height: 2em;
        padding: 0 0.5em;
    }
    th.sortable {
        user-select: none;
        cursor: pointer;
        cursor: hand;
    }
    th.sort-key:after {
        display: inline;
        content: " ▲";
    }
    th.sort-key-reverse:after {
        display: inline;
        content: " ▼";
    }

    td input {
        border: 0px;
        padding: 0.1em 0.25em;
    }

    td textarea {
        border: 0px;
        height: 1.1em;
    }
}
