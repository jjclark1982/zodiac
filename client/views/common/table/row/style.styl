.table-row-view {
    .show-when-error {
        display: none;
        color: red;
    }
    &.error .show-when-error {
        display: inline-block;
    }
    .show-when-loading {
        display: none;
    }
    &.loading .show-when-loading {
        display: inline-block;
    }
    .show-when-success {
        display: none;
        color: green;
    }
    &.success .show-when-success {
        display: inline-block;
    }
}
