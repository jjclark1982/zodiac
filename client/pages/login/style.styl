@require 'nib'

.login-view {
    margin-top: 3em;
    text-align: center;
    form {
        display: inline-block;
        vertical-align: middle;
        text-align: right;
        line-height: 2em;
        legend {
            text-align: center;
        }
    }

    .show-when-loading {
        display: none;
    }
    .loading .show-when-loading {
        display: inline-block;
    }

    .show-when-success {
        display: none;
    }
    .success .show-when-success {
        display: inline-block;
        color: green;
    }

    .show-when-error {
        display: none;
    }
    &.error .show-when-error, .error.show-when-error {
        display: block;
        color: red;
        height: 2em;
        line-height: 2em;
        position: relative;
        top: -2em;
        margin: 1em;
        margin-bottom: -2em;
        &:after {
            display: inline-block;
            padding-left: 0.25em;
            content: attr(data-error);
        }
    }

    .dismiss-button {
        display: none;
    }
}

.login-view.modal {
    position: absolute;
    bottom: 100%;
    margin-bottom: -20em;
    width: 100%;
    transition: margin-bottom 500ms ease-in-out;

    &.hidden {
        margin-bottom: 1em;
    }

    .container {
        box-shadow: 0px 8px 20px 0px rgba(31, 31, 31, 0.5);
        padding: 1em;
        background: white;
        border-radius: 0.5em;
        display: inline-block;
        margin: auto;
        position: relative;

        .dismiss-button {
            display: block;
            cursor: pointer;
            position: absolute;
            top: 0.5em;
            right: 0.5em;
        }
    }
}
